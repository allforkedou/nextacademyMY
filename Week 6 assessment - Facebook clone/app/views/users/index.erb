<div class="container">
	<div class="page-header">
		<h1>All Users</h1>
	</div>
	<div class="row">
		<% if @users %>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Name</th>
						<th>Email</th>
						<th>Profile Page</th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<td> <%= user.name %> </td> 
							<td> <%= user.email %></td>
							<td><a href="/users/<%= user.id %>"><%= user.name %>'s profile</a></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		<% end %>
	</div>
</div>